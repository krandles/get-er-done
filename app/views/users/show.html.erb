<div class="row">
  <div class="col-sm-6">
    <h2><%= @user.first_name %> <%= @user.last_name %></h2>
  </div>
  <div class="col-sm-6 text-right">
    <h3>Level <%= @user.level %></h3>
    <h4>Exp: <%= @user.experience %> / <%= @user.next_level %></h4>
  </div>
</div>

<h4>Username: <%= @user.user_name %></h4>
<h4>Email: <%= @user.email %></h4>
<div class="row">
  <div class="col-sm-6">
    <h4>Completed Projects: <%= @user.projects.select {|project| project.complete }.count %></h4>
    <h4>Incomplete Projects: <%= @user.projects.select {|project| !project.complete }.count %></h4>
  </div>
  <div class="col-sm-6">
    <h4>Completed Tasks: <%= @user.tasks.select {|task| task.complete }.count %></h4>
    <h4>Incomplete Tasks: <%= @user.tasks.select {|task| !task.complete }.count %></h4>
  </div>
</div>
<%= link_to "Edit", edit_user_path(current_user), method: :get, class: 'btn btn-primary' %>

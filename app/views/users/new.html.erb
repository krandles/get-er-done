<%= render 'errors/error_messages' %>

<%= form_for @user do |f| %>
  <div class="form-group">
    <%= f.label :first_name, :html => {:class => "control-label col-sm-2"} %>
    <%= f.text_field :first_name, :html => {:class => "form-horizontal"} %>
  </div>
  <div class="form-group">
    <%= f.label :last_name, :html => {:class => "control-label col-sm-2"} %>
    <%= f.text_field :last_name, :html => {:class => "form-horizontal"} %>
  </div>
  <div class="form-group">
    <%= f.label :user_name, :html => {:class => "control-label col-sm-2"} %>
    <%= f.text_field :user_name, :html => {:class => "form-horizontal"} %>
  </div>
  <div class="form-group">
    <%= f.label "Email address", :html => {:class => "control-label col-sm-2"} %>
    <%= f.email_field :email, :html => {:class => "form-horizontal"} %>
  </div>
  <div class="form-group">
    <%= f.label :password, :html => {:class => "control-label col-sm-2"} %>
    <%= f.password_field :password, :html => {:class => "form-horizontal"} %>
  </div>
  <div class="form-group">
    <%= f.label "Confirm password", :html => {:class => "control-label col-sm-2"} %>
    <%= f.password_field :password_confirmation, :html => {:class => "form-horizontal"} %>
  </div>
  <%= f.submit %>
<% end %>


<div class="row">
  <div class="col-sm-7">
    <h3>Overview</h3>
  </div>
  <div class="col-sm-5 text-right">
    <h4><%= Time.now.strftime('%A, %B %e, %Y ') %></h4>
  </div>
</div>

<div class="row">
  <div class="col-sm-4">
    <h4>Overdue Tasks</h4>
    <% @tasks.each do |task| %>
      <% if task.due_date < Date.today && !task.complete %>
        <%= link_to task.name, task %><br>
      <% end %>
    <% end %>
  </div>
  <div class="col-sm-4">
    <h4>Due Today</h4>
    <% @tasks.each do |task| %>
      <% if task.due_date == Date.today && !task.complete %>
        <%= link_to task.name, task %><br>
      <% end %>
    <% end %>
  </div>
  <div class="col-sm-4">
    <h4>Projects</h4>
    <% @projects.each do |project| %>
      <% if !project.complete %>
        <%= link_to project.name, project %><br>
      <% end %>
    <% end %>
  </div>
</div>

<h3>History</h3>
<div class="row">
  <div class="col-sm-4">
    <h4>Recent Tasks</h4>
    <% @tasks.each do |task| %>
      <% if task.complete && task.complete_date >= Date.today - 7 %>
        <%= link_to task.name, task %><br>
      <% end %>
    <% end %>
  </div>
  <div class="col-sm-4">
    <h4>Completed Projects</h4>
    <% @projects.each do |project| %>
      <% if project.complete %>
        <%= link_to project.name, project %><br>
      <% end %>
    <% end %>
  </div>
  <div class="col-sm-4">
    <h4>Due Tomorrow</h4>
    <% @tasks.each do |task| %>
      <% if task.due_date == Date.tomorrow && !task.complete %>
        <%= link_to task.name, task %><br>
      <% end %>
    <% end %>
  </div>
</div>
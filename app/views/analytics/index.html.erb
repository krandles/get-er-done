<h2>Admin Dashboard</h2>

<div class="row">
  <div class="col-sm-4">
    <h5>Users</h5>
    <ul>
      <li><%= @users.count %> users</li>
    </ul>
  </div>
  <div class="col-sm-4">
    <h5>Projects</h5>
    <ul>
      <li><%= @projects.count %> total projects</li>
      <li><%= @completed_projects %> completed projects</li>
    </ul>
  </div>
  <div class="col-sm-4">
    <h5>Tasks</h5>
    <ul>
      <li><%= @tasks.count %> total tasks</li>
    </ul>
  </div>
</div>
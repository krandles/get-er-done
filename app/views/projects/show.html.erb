<div class="row">
  <div class="col-sm-6">
    <h2><%= @project.name %></h2>
  </div>
  <div class="col-sm-6 text-right">
    <h3><%= @project.tasks.select {|t|t.status == true}.count %> / <%= @project.tasks.count %> tasks completed</h3>
  </div>
</div>
<!-- <h3>Status: <%= @project.status ? "Complete" : "Incomplete" %></h3> -->
<% if @project.status %>
  <h3>Date Completed: <%= Time.now.strftime("%D") %></h3>
<% end %>
<h3>Points for Completion <%= @project.points %></h3>
<br>
<h3>Project Tasks</h3> 
<ul>
  <% @project.tasks.sort_by{|task| task.priority}.each do |task| %>
    <li><%= link_to task.name, task %> | <%= task.status ? "Complete" : "Incomplete" %></li>
  <% end %>
</ul>
<br>
<div class="btn-group-vertical">
  <%= link_to "Edit Project", edit_project_path(@project.id), method: :get, class: 'btn btn-primary' %>
  <%= link_to "Delete Project", @project, method: :delete, class: 'btn btn-primary', data: {confirm: "Are you sure?"} %>
</div>
